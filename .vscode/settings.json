{
	"editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,

	"editor.codeActionsOnSave": {
		"source.fixAll": true
	},

	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"[xml]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"search.exclude": {
		"**/node_modules": true,
		"yarn.lock": true
	},
	"typescript.tsdk": "node_modules/typescript/lib"
}
